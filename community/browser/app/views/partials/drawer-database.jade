h4 Neo4j {{ neo4j.version }}
.inner
  h5 Node labels
  a.token.token-label(ng-show="labels.length", ng-click="editor.execScript('MATCH n RETURN n LIMIT 25')") *
  span(ng-repeat='node in labels | orderBy: identity')
    a.token.token-label(ng-click="editor.execScript('MATCH (n:`'+node+'`) RETURN n LIMIT 25')") {{node}}

  h5 Relationship types
  a.token.token-relationship-type(ng-show="relationships.length", ng-click="editor.execScript('MATCH (a)-[r]-(b) RETURN a,b LIMIT 25')") *
  span(ng-repeat='relationship in relationships | orderBy: identity')
    a.token.token-relationship-type(ng-click="editor.execScript('MATCH (a)-[:`'+relationship+'`]->(b) RETURN a,b LIMIT 25')") {{relationship}}

  div(ng-show='propertyKeys')
    h5 Property keys
    span(ng-repeat='propertyKey in propertyKeys | orderBy: identity')
      a.token.token-property-key(ng-click="editor.execScript('MATCH (n) WHERE has(n.`'+propertyKey+'`) RETURN DISTINCT \"node\" as element, n.`'+propertyKey+'` AS `'+propertyKey+'` LIMIT 25 UNION ALL MATCH ()-[r]-() WHERE has(r.`'+propertyKey+'`) RETURN DISTINCT \"relationship\" AS element, r.`'+propertyKey+'` AS `'+propertyKey+'` LIMIT 25')") {{propertyKey}}

  h5 Database
  ul
    li.pair
      .key Location:
      .value {{kernel.StoreDirectory || '-'}}
    li.pair
      .key Size:
      .value {{kernel.TotalStoreSize | humanReadableBytes}}
